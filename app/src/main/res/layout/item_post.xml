<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:background="@drawable/ic_bg">
    <ImageView
      android:id="@+id/post_user_image"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:src="@drawable/ic_menu_profile_24"
      android:layout_marginStart="4dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <TextView
      android:id="@+id/post_user_nickname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/s_user_name"
      android:textColor="?attr/colorOnBackground"
      android:textStyle="bold"
      android:textSize="20sp"
      app:layout_constraintStart_toEndOf="@+id/post_user_image"
      app:layout_constraintTop_toTopOf="@+id/post_user_image"
      android:layout_marginStart="8dp"/>

    <TextView
      android:id="@+id/post_user_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="8dp"
      android:text="@string/s_time"
      app:layout_constraintStart_toEndOf="@+id/post_user_image"
      app:layout_constraintTop_toBottomOf="@+id/post_user_nickname" />
    <TextView
      android:id="@+id/post_user_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginStart="4dp"
      android:text="@string/s_description"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:textColor="?attr/colorOnBackground"
      android:textSize="16sp"
      app:layout_constraintTop_toBottomOf="@+id/post_user_image" />
    <Button
      android:id="@+id/button3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:background="@drawable/ic_bg"
      android:text="like"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/post_user_text" />
    <Button
      android:id="@+id/itm_post_btn_comment"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:text="@string/s_comment"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/post_user_text" />
    <Button
      android:id="@+id/itm_post_btn_delete"
      style="@style/Widget.MaterialComponents.Button.TextButton"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_margin="8dp"
      android:text="delete"
      android:textColor="?attr/colorError"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>