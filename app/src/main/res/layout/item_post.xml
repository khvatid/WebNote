<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
      android:id="@+id/post_user_image"
      android:layout_width="48dp"
      android:layout_height="48dp"
      android:src="@drawable/ic_menu_profile_24"
      android:layout_marginStart="4dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
    <TextView
      android:id="@+id/post_user_nickname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="sosun3000"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toEndOf="@+id/post_user_image"
      app:layout_constraintTop_toTopOf="@+id/post_user_image"
      android:layout_marginStart="8dp"/>

    <TextView
      android:id="@+id/post_user_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginStart="8dp"
      android:text="time"
      app:layout_constraintStart_toEndOf="@+id/post_user_image"
      app:layout_constraintTop_toBottomOf="@+id/post_user_nickname" />
    <TextView
      android:id="@+id/post_user_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:layout_marginStart="4dp"
      android:text="lfkselk;fslkr;n\naknce rk lsfnlkerg\najfiusgjnslkgjs;lek"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintTop_toBottomOf="@+id/post_user_image" />
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="4dp"
      android:text="like"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/post_user_text" />
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:text="comments"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/post_user_text" />


</androidx.constraintlayout.widget.ConstraintLayout>