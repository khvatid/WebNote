<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/user_image_view"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="Аватар пользователя"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:textColor="@color/black"
            android:textSize="21sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="..."
            android:layout_gravity="start"
            android:textSize="25dp"
            android:contentDescription="Действия с постом"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Время"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:contentDescription="Картинка пользователя"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="15dp"
            android:contentDescription="Лайки"
            android:layout_margin="5dp"
            android:layout_height="15dp"
            />

        <ImageView
            android:layout_width="15dp"
            android:contentDescription="Коментарии"
            android:layout_margin="5dp"
            android:layout_height="15dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание"
        android:textColor="@color/black"/>

</LinearLayout>